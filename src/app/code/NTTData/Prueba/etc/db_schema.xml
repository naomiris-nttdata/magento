<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="prueba_grid" resource="default" engine="innodb" comment="Company Table">
        <column xsi:type="smallint" name="id" unsigned="false" nullable="false" identity="true" comment=" company ID"/>
        <column xsi:type="varchar" name="employees_name" length="60" nullable="false" comment=" employees name"/>
        <column xsi:type="varchar" name="employees_surname" length="60" nullable="false" comment=" employees surname"/>
        <column xsi:type="varchar" name="employees_age" length="2" nullable="false" comment=" employees age"/>
        <column xsi:type="varchar" name="type_employee" length="60" nullable="false" comment=" type of employee"/>
        <column xsi:type="smallint" name="id_language" unsigned="false" nullable="true" comment=" type of employee"/>
        <column xsi:type="smallint" name="id_designer" unsigned="false" nullable="true" comment=" type of employee"/>
        <column xsi:type="varchar" name="address" length="60" nullable="false" comment=" address"/>
        <column xsi:type="int" name="phone_number" nullable="false" comment=" phone number"/>
        <column xsi:type="varchar" name="family_group" length="255" nullable="false" comment=" Family group"/>
        <column xsi:type="smallint" name="insurance_id" unsigned="false" nullable="true" comment=" insurance id"/>
        <column xsi:type="varchar" name="academic_formation" length="255" nullable="false" comment=" Academic formation"/>
        <column xsi:type="date" name="start_date"  nullable="false" comment=" start working date"/>
        <column xsi:type="date" name="finish_date"  nullable="true" comment=" finish working date"/>
        <column xsi:type="varchar" name="working_modality" length="255" nullable="false" comment="working modality"/>
        <column xsi:type="varchar" name="seniority" length="255" nullable="false" comment="seniority"/>
        <column xsi:type="varchar" name="type_of_contract" length="255" nullable="false" comment="type of contract"/>
        <column xsi:type="text" name="holiday_days"   comment="Amount of days"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="PRUEBA_GRID_LANGUAGE_LANGUAGE_LANGUAGE_ID" table="company" column="id_language" referenceTable="language" referenceColumn="language_id" />
        <constraint xsi:type="foreign" referenceId="PRUEBA_GRID_DESIGNER_DESIGNER_DESIGNER_ID" table="company" column="id_designer" referenceTable="designer" referenceColumn="designer_id" />
    </table>
    <table name="designer" resource="default" engine="innodb" comment="Designer employees Table">
        <column xsi:type="smallint" name="designer_id" unsigned="false" nullable="false" identity="true" comment=" designer ID"/>
        <column xsi:type="varchar" name="type_designer" length="80" nullable="false" comment=" type of designer"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="designer_id"/>
        </constraint>
    </table>
    <table name="language" resource="default" engine="innodb" comment="language Table">
        <column xsi:type="smallint" name="language_id" unsigned="false" nullable="false" identity="true" comment=" Language ID"/>
        <column xsi:type="varchar" name="name" length="80" nullable="false" comment="language name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="language_id"/>
        </constraint>
    </table>
     <table name="insurance" resource="default" engine="innodb" comment="Insurance Table">
        <column xsi:type="smallint" name="insurance_id" unsigned="false" nullable="false" identity="true" comment=" Insurance ID"/>
        <column xsi:type="varchar" name="provider" length="80" nullable="false" comment="provider name"/>
        <column xsi:type="varchar" name="plan" length="80" nullable="false" comment="plan name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="insurance_id"/>
        </constraint>
    </table>
</schema>
